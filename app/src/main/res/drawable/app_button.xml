<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:width="1dp" android:color="@color/colorPrimaryOpacity"/>
            <gradient android:angle="90" android:centerColor="@color/colorAccentLight" android:endColor="@color/colorAccentLight" android:startColor="@color/colorAccentLight"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_corner_radius"/>
            <stroke android:width="1dp" android:color="@color/colorPrimaryOpacity"/>
            <gradient android:angle="90" android:centerColor="@color/colorAccent" android:endColor="@color/colorAccent" android:startColor="@color/colorAccent"/>
        </shape>
    </item>
</selector>