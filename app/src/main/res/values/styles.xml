<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="colorControlNormal">#d32f2f</item>
        <item name="colorControlActivated">#ff5722</item>
        <item name="colorControlHighlight">#f44336</item>
        <item name="android:buttonStyle">@style/AppButtons</item>
    </style>

    <style name="FragmentEditTextColorStyle" parent="AppTheme">
        <item name="android:textColorHint">@color/colorTextHint</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorControlHighlight">@color/colorControlHighlight</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppButtons" parent="Widget.AppCompat.ActionButton">
        <item name="android:background">@drawable/app_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">60dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FragmentButtonStyle">
        <item name="android:background">@drawable/fragment_button</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">140dp</item>
    </style>

    <style name="FaceBookButtonStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FabMenuButtonsSmall">
        <item name="fab_size">mini</item>
        <item name="fab_colorNormal">?attr/colorAccent</item>
        <item name="fab_colorPressed">?attr/colorAccent</item>
        <item name="fab_colorRipple">@color/colorRipple</item>
    </style>

    <style name="TextStyleSmall">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ChatTextStyle" parent="TextStyleSmall">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleMedium">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelTextStyle">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LabelTextStyleSmall" parent="LabelTextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="LabelTextStyleMedium" parent="LabelTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="LabelTextStyleMediumItalic" parent="LabelTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="LabelTextStyleLarge" parent="LabelTextStyle">
        <item name="android:textSize">28sp</item>
    </style>

    <style name="FragmentTextStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium.Inverse</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FragmentTitleTextStyle">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="FragmentTitleTextStyleNoBackground">
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="RoundTextStyle" parent="TextStyleSmall">
        <item name="android:background">@drawable/text_round</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RoundFloatingTextStyle" parent="TextStyleSmall">
        <item name="android:background">@drawable/text_rounded</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/foggy_textbox</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="SpinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

    <style name="SpinnerDropdownItemStyle" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/colorTransparent</item>
    </style>

</resources>