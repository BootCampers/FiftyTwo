<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:background="@color/white"
    tools:context=".fragments.TutorialFragment">

    <github.chenupt.springindicator.SpringIndicator xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/indicator"
        android:layout_width="match_parent"
        android:layout_height="@dimen/tutorial_index_dimen"
        app:siIndicatorColor="@color/colorPrimary"
        app:siSelectedTextColor="@color/white"
        app:siTextColor="@color/colorPrimaryDark"
        app:siTextSize="18sp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="@string/msg_tutorial_navigation_landscape"
        android:textColor="@color/colorTextHint" />

    <Button
        android:id="@+id/btn_tutorial_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|end"
        android:layout_marginRight="40dp"
        android:text="@string/msg_close" />

</FrameLayout>
