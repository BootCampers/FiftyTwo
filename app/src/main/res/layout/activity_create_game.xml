<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.bootcamp.fiftytwo.activities.CreateGameActivity">

    <TextView
        android:text="@string/game_id"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="51dp"
        android:id="@+id/gameIdLabel" />

    <TextView
        android:text=""
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/gameIdLabel"
        android:layout_toRightOf="@+id/gameIdLabel"
        android:layout_marginLeft="5dp"
        android:id="@+id/gameIDNumber" />

    <Button
        android:text="@string/choose_cards"
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gameIdLabel"
        android:layout_alignLeft="@+id/gameIdLabel"
        android:layout_alignStart="@+id/gameIdLabel"
        android:layout_marginTop="30dp"
        android:id="@+id/chooseCardsButton" />

    <Button
        android:text="@string/start_game"
        android:background="@color/colorPrimary"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/chooseCardsButton"
        android:layout_alignLeft="@+id/gameIdLabel"
        android:layout_alignStart="@+id/gameIdLabel"
        android:layout_marginTop="30dp"
        android:id="@+id/startGameButton" />
</RelativeLayout>
